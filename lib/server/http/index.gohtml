<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Housesitter for Zigbee2MQTT</title>
    <link href="/public/main.css" rel="stylesheet">
    <script>
      function openpanel(id) {
        const panel = document.querySelector("#panel");
        panel.classList.toggle("hidden")
        panel.querySelector(`#schedule-${id}`).scrollIntoView();
      }

      function updateSchedule(form, event) {
        event.preventDefault();
        const formData = new FormData(form);
        const newScheduleValues = Object.fromEntries(formData)
        const url = `/api/schedules/${newScheduleValues.id}`

        fetch(url, {
          method: "PUT",
          body: JSON.stringify(newScheduleValues)
        }).then(() => {
          // location.reload()
          // reload?
        })
      }
    </script>
</head>
<body>

<header>
    <h1>
        Housesitter for Zigbee2MQTT
    </h1>
</header>

<datalist id="markers">
    <option value="0"></option>
    <option value="25"></option>
    <option value="50">50</option>
    <option value="75"></option>
    <option value="100">100</option>
</datalist>
<section id="schedule-grid">
    <article class="schedule-box">
        {{ range .Legends }}
            <div class="{{.DisplayClasses }}" {{.Style}}>
                {{ .Title }}
            </div>
        {{ end }}
        {{ range .Schedules }}
            <div style="grid-row-start:calc({{.Row }} + 1)">
                {{.Title}}
            </div>
            {{/*            TODO: little icons for light colors*/}}
            <div class="label chamfer" onclick="openpanel({{.ID}})"
                    {{ .InlineStyles }}
            >
                {{ .FormattedTime }}
            </div>
            {{/*            {{ range .Schedules}}*/}}
            {{/*                <div {{.InlineStyles }} class="schedule chamfer" onclick="openpanel({{.ID}})">*/}}
            {{/*                    {{ .Title }}*/}}
            {{/*                </div>*/}}
            {{/*            {{ end }}*/}}
        {{ end }}
    </article>
</section>
<article id="panel" class="hidden">
    {{ range .Schedules }}
    <article class="card">
        <h2>{{.Title}}</h2>
        <form onsubmit="updateSchedule(this, event)">
            <input type="hidden" name="id" value="{{.ID}}">
            <label>On Time
                <input type="time" name="ontime" step="60" value="{{.OnTime.HTMLValue}}">
            </label>
            <label>Off Time
                <input type="time" step="60" name="offtime" value="{{.OffTime.HTMLValue}}">
            </label>
            <button type="submit">Update</button>
        </form>
        {{ range .Devices}}
            <article id="schedule-{{.ID}}">
                <h3>{{.FriendlyName}}</h3>
                <form onsubmit="updateDevice(this, event)">
                    <input type="hidden" name="id" value="{{.ID}}">
                    <label>Brightness
                        <input type="range" min="0" max="100" value="{{.Brightness}}" list="markers"/>
                    </label>
                    <label>
                        Color
                        <input type="color" name="color" value="{{.Color}}"/>
                    </label>
                    <button type="submit">Update</button>
                </form>
            </article>
        {{ end }}
        <article id="schedule-new">
            <h3>
                Add a Device
            </h3>
            <form onsubmit="addDevice(this, event)">
                <label>Brightness
                    <input type="range" min="0" max="100" value="75" list="markers"/>
                </label>
                <label>
                    Color
                    <input type="color" name="color" value="#00000"/>
                </label>
                <button type="submit">Add</button>
            </form>
        </article>
        {{ end }}
    </article>
</article>
</body>
</html>
